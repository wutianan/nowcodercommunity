<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--类比  创建UserDaoImpl去实现UserDao-->
<mapper namespace="com.fz.newcoder.community.dao.DiscussPostMapper">

    <sql id="selectFields">
        id, user_id,title,content,type,status,create_time,comment_count,score
    </sql>

    <select id="selectDiscussPosts" resultType="com.fz.newcoder.community.entity.DiscussPost">
        select <include refid="selectFields"/>
        from newcodercommnuity.discuss_post
        where status != 2
        <if test="userId!=0">
            and user_id = #{userId}
        </if>
        order by type desc,create_time desc
        limit #{offset},#{limit}
    </select>

    <select id="selectDiscussPostRows" resultType="java.lang.Integer">
        select count(id) from newcodercommnuity.discuss_post
        where status != 2
        <if test="userId != 0">
            and user_id = #{userId}
        </if>
    </select>


</mapper>